+int MTPDevice::setLastModeSyncPath(string path)
+{
+	if(path.empty())
+	{
+		LogError("path is empty");
+		return -1;
+	}
+
+	LogInfo("lastmode path: %s", path.c_str());
+
+	m_lastmode_path = path;
+
+	sem_post(&device_connect_sem);
+
+	return 0;
+}
